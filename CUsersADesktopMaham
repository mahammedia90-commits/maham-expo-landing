+                transition={{ duration: 0.2 }}
+              >
+                <Link
+                  href="/#download"
+                  className="btn-primary text-white px-6 py-2.5 rounded-full font-medium text-center mt-2 block"
+                  onClick={() => setMobileMenuOpen(false)}
+                >
+                  {t.nav.downloadApp}
+                </Link>
+              </motion.div>
+            </motion.nav>
+          </motion.div>
+        )}
+      </AnimatePresence>
+    </motion.header>
+  );
