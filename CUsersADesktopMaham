+                      ? 'text-[#987012] dark:text-[#D4B85A] after:scale-x-100'
+                      : 'text-gray-600 dark:text-gray-300 hover:text-[#987012] dark:hover:text-[#D4B85A] after:scale-x-0 hover:after:scale-x-100'
+                  }`}
+                >
+                  {link.label}
+                </Link>
+              </motion.div>
+            ))}
+          </nav>
