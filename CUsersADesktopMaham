+            {zone.description && (
+              <motion.p
+                initial={{ opacity: 0, y: 20 }}
+                animate={{ opacity: 1, y: 0 }}
+                transition={{ delay: 0.2 }}
+                className="text-[#2A2313]/80 dark:text-gray-300 text-lg sm:text-xl max-w-3xl mx-auto leading-relaxed mb-4"
+              >
+                {zone.description[lang]}
+              </motion.p>
+            )}
+
