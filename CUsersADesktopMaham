+import { useMutation } from '@tanstack/react-query';
+import { contactService } from '../services/contactService';
+import type { ContactFormData } from '@/shared/types';
+
+/**
+ * Hook to submit contact form
+ */
+export function useContactForm() {
+  return useMutation({
+    mutationFn: (data: ContactFormData) => contactService.submitContactForm(data),
+  });
+}
diff --git a/src/features/contact/services/contactService.ts b/src/features/contact/services/contactService.ts
new file mode 100644
index 0000000..b566760
--- /dev/null
+++ b/src/features/contact/services/contactService.ts
@@ -0,0 +1,12 @@
+import { api } from '@/services/api';
+import type { ApiResponse, ContactFormData, ContactFormResponse } from '@/shared/types';
+
+export const contactService = {
+  /**
+   * Submit contact form
+   */
+  submitContactForm: async (data: ContactFormData): Promise<ContactFormResponse> => {
+    const response = await api.post<ApiResponse<ContactFormResponse>>('/contact', data);
+    return response.data;
+  },
+};
