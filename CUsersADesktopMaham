+                    className="w-12 h-12 bg-[#987012] rounded-lg flex items-center justify-center text-white hover:bg-[#7A5A0E] transition"
+                    aria-label={social.label}
+                  >
+                    <social.icon className="w-5 h-5" />
+                  </motion.a>
+                ))}
+              </motion.div>
+            </motion.div>
+          </motion.div>
+        </div>
+      </div>
+    </section>
+  );
